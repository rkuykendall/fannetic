<style>
  .split {
    display: block;
    padding-top: 8px;
  }
</style>
<div class="row">
  <div class="small-12 large-6 columns">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="small-12 large-6 columns">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="small-12 large-6 columns">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="small-12 large-6 columns">
    <%= f.label :start %>
    <%= f.datetime_select :start,
      {
        :ampm => true, 
        :minute_step => 15, 
        :datetime_separator => '<div class="small-4 columns"> &nbsp; </div>', 
        :time_separator => "" 
      }, {
        :class => "small-4 datetime columns"
      } %>
  </div>

  <div class="small-12 large-6 columns">
    <%= f.label :end %>
    <%= f.datetime_select :end,
      {
        :ampm => true, 
        :minute_step => 15, 
        :datetime_separator => '<div class="small-4 columns"> &nbsp; </div>', 
        :time_separator => "" 
      }, {
        :class => "small-4 datetime columns"
      } %>
  </div>
</div>